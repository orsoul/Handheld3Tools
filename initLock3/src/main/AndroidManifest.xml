<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.fanfull.initbag3">
  <!-- 网络相关 -->
  <uses-permission android:name="android.permission.INTERNET" />
  <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
  <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" />
  <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
  <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" /> <!-- SD卡 -->
  <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

  <application
      android:name="com.fanfull.base.BaseApplication"
      android:allowBackup="true"
      android:icon="@drawable/logo"
      android:label="@string/app_name"
      android:theme="@style/AppTheme"
      tools:ignore="AllowBackup,GoogleAppIndexingWarning">
    <activity android:name="com.fanfull.newbaginit.AboutActivity"></activity>
    <activity
        android:name="com.fanfull.newbaginit.InitNfcBagActivity"
        android:label="@string/app_name">
      <intent-filter>
        <action android:name="android.intent.action.MAIN" />

        <category android:name="android.intent.category.LAUNCHER" />
      </intent-filter>
    </activity>
    <activity
        android:name="com.fanfull.newbaginit.SettingPowerActivity"
        android:label="@string/app_name"
        android:launchMode="singleTask" />
    <activity
        android:name="com.fanfull.newbaginit.SettingIPActivity"
        android:label="@string/app_name"
        android:launchMode="singleTask" />
    <activity
        android:name="com.fanfull.newbaginit.ZhuangXiangActivity"
        android:label="@string/app_name"
        android:launchMode="singleTask" />
  </application>

</manifest>