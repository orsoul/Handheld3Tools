<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/activity_title_bg"
    >

  <TextView
      android:id="@+id/tv_item_activity_title"
      style="@style/tv_title"
      android:text="@string/scan_bunch"
      android:textSize="20sp"
      android:textColor="@color/sliverwhite"
      />

  <ImageView
      android:id="@+id/im_item_activity_back"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="left|center_vertical"
      android:layout_marginLeft="15dp"
      android:onClick="onClickBack"
      android:src="@drawable/back"
      android:contentDescription="加载图片失败"
      />

</FrameLayout>