<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

  <TextView
      android:id="@+id/tv_item_coverbag"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="5dp"
      android:gravity="center"
      android:text="扫描 EPC"
      android:textColor="@color/sliverwhite"
      android:textSize="22sp"
      />

  <TextView
      android:id="@+id/tv_item_coverbag_des"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_centerVertical="true"
      android:layout_marginLeft="5dp"
      android:layout_marginRight="5dp"
      android:layout_toLeftOf="@+id/im_item_coverbag"
      android:layout_toRightOf="@id/tv_item_coverbag"
      android:gravity="center"
      android:text=""
      android:textColor="@drawable/selector_coverbag_check_descolor"
      android:textSize="14sp"
      />

  <ImageView
      android:id="@+id/im_item_coverbag"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentRight="true"
      android:layout_centerVertical="true"
      android:layout_marginRight="8dp"
      android:clickable="false"
      android:contentDescription="获取图片失败"
      android:src="@drawable/selector_coverbag_check_img"
      android:visibility="visible"
      />

</RelativeLayout>