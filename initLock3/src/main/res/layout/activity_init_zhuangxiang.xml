<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

  <LinearLayout
      android:id="@+id/lin_big"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      >


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

      <FrameLayout
          android:layout_width="150dp"
          android:layout_height="wrap_content"
          android:background="@android:color/transparent"
          >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:text="择二选一"
            android:textColor="@android:color/darker_gray"
            android:textSize="15sp"
            />

        <CheckBox
            android:id="@+id/cb_v_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:scaleX="0.75"
            android:scaleY="0.75"
            android:visibility="gone"
            android:layout_marginRight="15dp"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_gravity="bottom"
            android:background="@android:color/darker_gray"
            />
      </FrameLayout>

      <FrameLayout
          android:layout_width="150dp"
          android:layout_height="wrap_content"
          android:background="@android:color/transparent"
          >

        <TextView
            android:id="@+id/tv_v_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:text="袋码"
            android:textColor="@android:color/darker_gray"
            android:textSize="15sp"
            />

        <CheckBox
            android:id="@+id/cb_v_setting_rfid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:scaleX="0.75"
            android:scaleY="0.75"
            android:layout_marginRight="15dp"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_gravity="bottom"
            android:background="@android:color/darker_gray"
            />
      </FrameLayout>

      <FrameLayout
          android:layout_width="150dp"
          android:layout_height="wrap_content"
          android:background="@android:color/transparent"
          >

        <TextView
            android:id="@+id/tv_bq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:text="标签码"
            android:textColor="@android:color/darker_gray"
            android:textSize="15sp"
            />

        <CheckBox
            android:id="@+id/cb_v_setting_epc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:scaleX="0.75"
            android:scaleY="0.75"
            android:checked="true"
            android:layout_marginRight="15dp"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_gravity="bottom"
            android:background="@android:color/darker_gray"
            />
      </FrameLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        >

      <TextView
          android:id="@+id/tv_init_num"
          android:layout_width="wrap_content"
          android:layout_height="0dp"
          android:layout_weight="0.7"
          android:layout_gravity="center_horizontal"
          android:gravity="center_vertical"
          android:textColor="@color/yellow"
          android:textSize="70sp"
          android:text="20"
          />

      <TextView
          android:id="@+id/tv_sum_recover"
          android:layout_width="wrap_content"
          android:layout_height="0dp"
          android:layout_gravity="center_horizontal"
          android:layout_weight="0.3"
          android:layout_marginTop="5dp"
          android:textColor="@color/white"
          android:textSize="20sp"
          android:text="重新计数"
          />
    </LinearLayout>

  </LinearLayout>


  <RelativeLayout
      android:layout_width="wrap_content"
      android:layout_above="@+id/btn_first_re"
      android:layout_below="@+id/lin_big"
      android:layout_height="fill_parent"
      >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          >

        <TextView
            android:id="@+id/cardinf"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            />

      </LinearLayout>
    </ScrollView>
  </RelativeLayout>


  <LinearLayout
      android:id="@+id/btn_first_re"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:layout_alignParentBottom="true"
      android:layout_marginTop="20dp"
      android:layout_marginBottom="10dp"
      android:orientation="horizontal"
      >

    <Button
        android:id="@+id/btn_init_bag_ok"
        style="@style/activity_btn"
        android:layout_width="0dp"
        android:layout_marginLeft="10dp"
        android:layout_weight="1"
        android:text="开   始"
        />


    <Button
        android:id="@+id/btn_init_bag_cancel"
        style="@style/activity_btn"
        android:layout_width="0dp"
        android:layout_marginLeft="20dp"
        android:layout_weight="1"
        android:text="返   回"
        />

  </LinearLayout>

</RelativeLayout>
