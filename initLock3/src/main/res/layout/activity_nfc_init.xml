<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

  <LinearLayout
      android:id="@+id/lin_big"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      >


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >


      <RelativeLayout
          android:id="@+id/bt_dropdown_diqu"
          android:layout_width="wrap_content"
          android:layout_height="30dp"
          android:layout_marginLeft="5dp"
          android:layout_marginTop="5dp"
          android:layout_marginBottom="5dp"
          android:background="@drawable/selector_sp"
          android:onClick="onClick"
          >

        <TextView
            android:id="@+id/tv_value_diqu"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:ellipsize="end"
            android:gravity="left|center"
            android:hint="青   岛"
            android:paddingLeft="10dp"
            android:singleLine="true"
            android:textColor="#ff000000"
            android:textSize="18dp"
            ></TextView>

        <LinearLayout

            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="90dp"
            android:gravity="center"
            >

          <ImageView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="2dp"
              android:src="@drawable/abc_spinner_mtrl_am_alpha"
              />
        </LinearLayout>
      </RelativeLayout>

      <RelativeLayout
          android:id="@+id/bt_dropdown_cai"
          android:layout_width="wrap_content"
          android:layout_height="30dp"
          android:layout_marginLeft="5dp"
          android:layout_marginTop="5dp"
          android:layout_marginBottom="5dp"
          android:background="@drawable/selector_sp"
          android:onClick="onClick"
          >

        <TextView
            android:id="@+id/tv_value_can"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:ellipsize="end"
            android:gravity="left|center"
            android:hint="完   整"
            android:paddingLeft="10dp"
            android:singleLine="true"
            android:textColor="#ff000000"
            android:textSize="18dp"
            ></TextView>

        <LinearLayout
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="90dp"
            android:gravity="center"
            >

          <ImageView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="2dp"
              android:src="@drawable/abc_spinner_mtrl_am_alpha"
              />
        </LinearLayout>
      </RelativeLayout>

      <RelativeLayout
          android:id="@+id/bt_dropdown_dai"
          android:layout_width="wrap_content"
          android:layout_height="30dp"
          android:layout_below="@+id/layout_cai"
          android:layout_marginLeft="5dp"
          android:layout_marginTop="5dp"
          android:layout_marginBottom="5dp"
          android:background="@drawable/selector_sp"
          android:onClick="onClick"
          >

        <TextView
            android:id="@+id/tv_value_dai"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:ellipsize="end"
            android:gravity="left|center"
            android:hint="100元    "
            android:paddingLeft="10dp"
            android:singleLine="true"
            android:textColor="#ff000000"
            android:textSize="18dp"
            ></TextView>

        <LinearLayout
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="90dp"
            android:gravity="center"
            >

          <ImageView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="2dp"
              android:src="@drawable/abc_spinner_mtrl_am_alpha"
              />
        </LinearLayout>
      </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        >

      <TextView
          android:id="@+id/tv_init_num"
          android:layout_width="wrap_content"
          android:layout_height="0dp"
          android:layout_gravity="center_horizontal"
          android:layout_weight="0.7"
          android:gravity="center_vertical"
          android:text="20"
          android:textColor="@color/yellow"
          android:textSize="70sp"
          />

      <TextView
          android:id="@+id/tv_sum_recover"
          android:layout_width="wrap_content"
          android:layout_height="0dp"
          android:layout_gravity="center_horizontal"
          android:layout_marginTop="5dp"
          android:layout_weight="0.3"
          android:text="重新计数"
          android:textColor="@color/white"
          android:textSize="20sp"
          />
    </LinearLayout>

  </LinearLayout>

  <TextView
      android:id="@+id/tv_bagId"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@id/lin_big"
      android:layout_marginTop="12dp"
      android:gravity="center"
      android:hint="袋锁编号"
      android:textSize="16sp"
      android:visibility="visible"
      />

  <LinearLayout
      android:id="@+id/v_coverBagItemView_info_linear"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:layout_below="@id/tv_bagId"
      android:layout_margin="8dp"
      android:layout_marginLeft="12dp"
      android:layout_marginRight="12dp"
      android:orientation="vertical"
      >

    <com.fanfull.view.CoverBagItemView
        android:id="@+id/v_init_bag_init_epc_show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/show1_init"
        />

    <com.fanfull.view.CoverBagItemView
        android:id="@+id/v_init_bag_read_rfid_show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/show2_init"
        />

    <com.fanfull.view.CoverBagItemView
        android:id="@+id/v_init_bag_init_first_show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/show3_init"
        />

    <com.fanfull.view.CoverBagItemView
        android:id="@+id/v_init_bag_write_rfid_show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/show4_init"
        />
  </LinearLayout>


  <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentBottom="true"
      android:layout_centerHorizontal="true"
      android:layout_marginBottom="5dp"
      android:orientation="horizontal"
      >

    <Button
        android:id="@+id/btn_init_bag_ok"
        style="@style/activity_btn"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:enabled="false"
        android:padding="5dp"

        android:text="开  始"
        />

    <Button
        android:id="@+id/btn_init_bag_off_line"
        style="@style/activity_btn"
        android:layout_width="0dp"
        android:layout_marginLeft="20dp"
        android:layout_weight="1"
        android:text="离线上传"
        android:visibility="gone"
        />

    <Button
        android:id="@+id/btn_init_bag_zhuangxiang"
        style="@style/activity_btn"
        android:layout_width="0dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_weight="1"
        android:text="装箱"
        />

    <Button
        android:id="@+id/btn_init_bag_cancel"
        style="@style/activity_btn"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:text="退  出"
        />

  </LinearLayout>

</RelativeLayout>
