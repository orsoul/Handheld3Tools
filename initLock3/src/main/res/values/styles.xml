<resources xmlns:android="http://schemas.android.com/apk/res/android">

  <style name="AppTheme" parent="android:Theme.Black" />

  <style name="dialog">
    <item name="android:windowBackground">@android:color/transparent</item>
    <item name="android:windowFrame">@null</item>
    <item name="android:windowNoTitle">true</item>
    <item name="android:windowIsFloating">true</item>
    <item name="android:windowIsTranslucent">true</item>
    <item name="android:windowContentOverlay">@null</item>
    <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
    <item name="android:backgroundDimEnabled">true</item>
  </style>
  <!-- activity 按钮 样式 -->
  <style name="activity_btn">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:gravity">center</item>
    <item name="android:padding">5dp</item>
    <item name="android:textColor">@android:color/black</item>
    <item name="android:background">@drawable/selector_button_main</item>
  </style>

  <!-- coverbag_activity textview 样式 -->
  <style name="tv_coverbag">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:gravity">center</item>
    <item name="android:singleLine">true</item>
    <item name="android:ellipsize">marquee</item>
    <item name="android:marqueeRepeatLimit">marquee_forever</item>
    <item name="android:textColor">#0000dd</item>
    <item name="android:textSize">18sp</item>
  </style>

  <style name="tv_title">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:gravity">center</item>
    <item name="android:padding">5dp</item>
    <item name="android:background">@color/activity_title_bg</item>
    <item name="android:textSize">20sp</item>
  </style>

  <style name="tv_setting_item">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:gravity">center_vertical</item>
    <item name="android:paddingRight">10dp</item>
    <item name="android:paddingLeft">5dp</item>
    <item name="android:padding">5dp</item>
    <item name="android:drawableRight">@drawable/arrow_right_white</item>
    <item name="android:textSize">15sp</item>
    <item name="android:background">@drawable/list_back</item>
  </style>
  <!-- 功率设置 -->
  <style name="et_power">
    <item name="android:layout_width">20dp</item>
    <item name="android:layout_height">20dp</item>
    <item name="android:gravity">center</item>
    <!--  item name="android:layout_marginLeft">10dp</item>-->
    <item name="android:inputType">number</item>
    <item name="android:maxLength">2</item>
    <item name="android:textSize">15sp</item>
  </style>
  <!-- Activity 背景透明设置-->
  <style name="Act_Transparent">
    <item name="android:windowBackground">@color/transparent_background</item>
    <item name="android:windowNoTitle">true</item>
    <item name="android:windowIsTranslucent">true</item>
    <item name="android:windowAnimationStyle">@android:style/Animation.Translucent</item>
  </style>

  <style name="AppThemeOne" parent="android:Theme.Black" />

  <style name="AppThemeTwo" parent="android:Theme.Light" />
</resources>