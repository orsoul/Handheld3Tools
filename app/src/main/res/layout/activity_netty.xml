<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:focusable="true"
  android:focusableInTouchMode="true"
  tools:context=".ui.NettyActivity">

  <TextView
    android:id="@+id/tv_netty_show"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginBottom="5dp"
    android:padding="0dp"
    android:text=""
    app:layout_constraintBottom_toTopOf="@id/btn_netty_connect"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

  <Button
    android:id="@+id/btn_netty_connect"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="8dp"
    android:layout_marginBottom="5dp"
    android:enabled="true"
    android:padding="0dp"
    android:text="连接"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent" />

  <Button
    android:id="@+id/btn_netty_setIp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="8dp"
    android:padding="0dp"
    android:text="设置ip"
    app:layout_constraintBottom_toBottomOf="@id/btn_netty_connect"
    app:layout_constraintEnd_toStartOf="@+id/btn_netty_connect"
    app:layout_constraintTop_toTopOf="@id/btn_netty_connect" />

  <Button
    android:id="@+id/btn_netty_setLog"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="8dp"
    android:padding="0dp"
    android:text="日志数量"
    app:layout_constraintBottom_toBottomOf="@id/btn_netty_connect"
    app:layout_constraintEnd_toStartOf="@id/btn_netty_setIp"
    app:layout_constraintTop_toTopOf="@id/btn_netty_connect" />

  <Button
    android:id="@+id/btn_netty_read_log"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="8dp"
    android:padding="0dp"
    android:text="读物流"
    app:layout_constraintBottom_toBottomOf="@id/btn_netty_connect"
    app:layout_constraintEnd_toStartOf="@id/btn_netty_setLog"
    app:layout_constraintTop_toTopOf="@id/btn_netty_connect" />
</androidx.constraintlayout.widget.ConstraintLayout>